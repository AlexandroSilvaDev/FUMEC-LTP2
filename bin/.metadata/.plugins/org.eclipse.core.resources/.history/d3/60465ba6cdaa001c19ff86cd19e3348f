package LTP2;

/*
Exercício 4.2 - Fazer um programa para receber via teclado o Nome do Empregado, o Código do
Empregado (numérico), e o Número de Peças fabricadas em um determinado mês. O programa deverá
imprimir uma lista, contendo o Nome do Empregado, o Salário e a Média de Salários da empresa. Para
calcular o Salário, considerar:
- 1 a 200 peças fabricadas – salário de R$ 2,00 por peça
- 201 a 400 peças fabricadas – salário de R$ 2,30 por peça
- acima de 400 peças fabricadas – salário de R$ 2,50 por peça
No final do relatório, imprimir o total gasto em salários pela empresa.
Consistências:
- O número de peças deverá ser maior que zero.
- O código deverá ser um número entre 1 e 999
Métodos:
- Fazer um método para calcular o Salário do Empregado
- Parâmetro: número de peças
- Retorno: salário
Observações:
- Adotar um flag para encerrar a entrada de dados.
- Considerar o máximo de 100 empregados.
Layout do relatório:
      Nome             Salário             Média Salários
----------------   --------------- ------------------------------
XXXXXXXXXXXXXXXX       999.99                  999.99
XXXXXXXXXXXXXXXX       999.99                  999.99
XXXXXXXXXXXXXXXX       999.99                  999.99
XXXXXXXXXXXXXXXX       999.99                  999.99
Total pago com salários: 9,999.99
*/

import java.util.*;

public class Exercício_4_2 {

	public static void main(String[] args) {
		
		// 1 - Variáveis:
		
		Scanner leia = new Scanner(System.in);
		
		String nome[] = new String[100];
		float salario[] = new float[100];
		int codigoOperario = 0;
		int i;
		int numeroPecas = 0;
		int contador = 0;
		float mediaSalario = 0;
		float soma = 0;
		
		// 2 - Entrada de Dados:
		
		do {
			for ( i = 0 ; i < 100 ; i++ ) {
				
				System.out.println("Digite o código do operário (0 para encerrar): ");
				codigoOperario = leia.nextInt();
				
				if ( codigoOperario < 1 && codigoOperario > 999 ) {
					System.out.println("Código inválido! Digite novamente.");
					
				} else if ( codigoOperario == 0 ) {
					System.out.println("Entrada de dados encerrada!");
					
				} else {
					contador++;
					
					do {
						System.out.println("Digite o nome do funcionário: ");
						nome[i] = leia.nextLine();
						
						if ( nome[i].equalsIgnoreCase("") ) {
							System.out.println("Nome obrigatório!");
						}
					} while ( ! nome[i].equalsIgnoreCase("") );
					
					do {
						System.out.println("Digite o número de peças fabricadas pelo empregado no mês: ");
						numeroPecas = leia.nextInt();
						
						if ( numeroPecas <=0 ) {
							System.out.println("Número de peças inválido! Digite novamente.");
						}
					} while ( numeroPecas > 0 );
					
		// 3 - Cálculos (Objetivo):
					
					salario[i] = calcularSalarioPorFuncionario(numeroPecas);
					soma += salario[i];
				}
			}			
		} while ( codigoOperario != 0 || ! nome[99].equalsIgnoreCase(null) );
		
		mediaSalario = soma / contador;
		
		// 4 - Saídas
		
		for ( i = 0 ; i < 100 ; i++ ) {
			
			System.out.println(nome[i] + "   " + salario[i]);
		}
		
		System.out.println("Total pago com sálarios: " + soma + "\nMédia dos sálarios: " + mediaSalario);
		
	}
	
	public static float calcularSalarioPorFuncionario(int pecas) {
		
		float salario = 0, salarioTotal = 0;
		
		if ( pecas > 0 && pecas <= 200 ) {
			salario = pecas * 2;
			
		} else if ( pecas > 200 && pecas <= 400 ) {
			salario = pecas * (float) 2.30;
			
		} else {
			salario = pecas * (float) 2.50;
			
		}
		
		return salario;
	}
}
